{
    "name": "browser-extension-for-salesforce",
    "description": "browser-extension-for-salesforce",
    "version": "2.0",
    "manifest_version": 2,
    "permissions": [
        "alarms",
        "notifications",
        "storage",
        "tabs",
        "activeTab"
    ],
    "browser_action": {
        "default_title": "browser-extension-for-salesforce",
        "default_popup": "popup.html"
    },
    "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": false
    },
    "content_scripts": [
        {
            "matches": [
                // "<all_urls>",
                "https://letznav-dev-ed.lightning.force.com/*"
            ],
            "js": [
                "contentscript.js"
            ],
            "all_frames": true,
            "run_at": "document_start"
        }
    ]
}